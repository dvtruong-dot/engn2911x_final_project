# In[4]:


import math
import torch
import torch.nn as nn
import torch.nn.functional as F

class BasicBlockNoBN(nn.Module):
    """
    Basic residual block without BatchNorm:
      x -> Conv3x3 -> ReLU -> Conv3x3 -> +skip -> ReLU
    Optionally uses a 1x1 Conv for downsampling the skip path.
    """
    expansion = 1

    def __init__(self, in_channels, out_channels, stride=1):
        super().__init__()

        # Main path
        self.conv1 = nn.Conv2d(
            in_channels, out_channels,
            kernel_size=3, stride=stride, padding=1, bias=True
        )
        self.conv2 = nn.Conv2d(
            out_channels, out_channels,
            kernel_size=3, stride=1, padding=1, bias=True
        )
        self.relu = nn.ReLU(inplace=True)

        # Skip / downsample path (1x1 conv) if shape changes
        self.downsample = None
        if stride != 1 or in_channels != out_channels:
            self.downsample = nn.Conv2d(
                in_channels, out_channels,
                kernel_size=1, stride=stride, bias=True
            )

    def forward(self, x):
        identity = x

        out = self.conv1(x)
        out = self.relu(out)
        out = self.conv2(out)

        if self.downsample is not None:
            identity = self.downsample(x)

        out = out + identity
        out = self.relu(out)
        return out


class TinyResNet(nn.Module):
    """
    Tiny ResNet for 32x32 RGB input.
    Layout:
      Stem: 3x32x32 -> 16x32x32
      Stage1: 2x BasicBlock(16 -> 16), 32x32
      Stage2: BasicBlock(16 -> 32, stride=2), BasicBlock(32 -> 32), 16x16
      Stage3: BasicBlock(32 -> 64, stride=2), BasicBlock(64 -> 64), 8x8
      Head: GlobalAvgPool -> FC(num_classes)
    """

    def __init__(self, num_classes=10):
        super().__init__()

        # Stem: 3x32x32 -> 16x32x32
        self.conv0 = nn.Conv2d(
            3, 16, kernel_size=3, stride=1, padding=1, bias=True
        )
        self.relu0 = nn.ReLU(inplace=True)

        # Stage 1: 16x32x32, 2 blocks
        self.layer1_block1 = BasicBlockNoBN(16, 16, stride=1)
        self.layer1_block2 = BasicBlockNoBN(16, 16, stride=1)

        # Stage 2: 16x32x32 -> 32x16x16, 2 blocks
        self.layer2_block1 = BasicBlockNoBN(16, 32, stride=2)
        self.layer2_block2 = BasicBlockNoBN(32, 32, stride=1)

        # Stage 3: 32x16x16 -> 64x8x8, 2 blocks
        self.layer3_block1 = BasicBlockNoBN(32, 64, stride=2)
        self.layer3_block2 = BasicBlockNoBN(64, 64, stride=1)

        # Head: global average pool + FC
        self.global_pool = nn.AdaptiveAvgPool2d((1, 1))
        self.fc = nn.Linear(64, num_classes)

        self._init_weights()

    def _init_weights(self):
        # Kaiming init for convs, reasonable init for FC
        for m in self.modules():
            if isinstance(m, nn.Conv2d):
                nn.init.kaiming_normal_(
                    m.weight, mode="fan_out", nonlinearity="relu"
                )
                if m.bias is not None:
                    nn.init.zeros_(m.bias)
            elif isinstance(m, nn.Linear):
                nn.init.kaiming_uniform_(m.weight, a=math.sqrt(5))
                if m.bias is not None:
                    fan_in, _ = nn.init._calculate_fan_in_and_fan_out(m.weight)
                    bound = 1 / math.sqrt(fan_in)
                    nn.init.uniform_(m.bias, -bound, bound)

    def forward(self, x):
        # Stem
        x = self.conv0(x)
        x = self.relu0(x)

        # Stage 1
        x = self.layer1_block1(x)
        x = self.layer1_block2(x)

        # Stage 2
        x = self.layer2_block1(x)
        x = self.layer2_block2(x)

        # Stage 3
        x = self.layer3_block1(x)
        x = self.layer3_block2(x)

        # Head
        x = self.global_pool(x)   # N x 64 x 1 x 1
        x = torch.flatten(x, 1)   # N x 64
        x = self.fc(x)            # N x num_classes
        return x


# In[5]:


# check
model = TinyResNet(num_classes=10)
print(model)

# Check forward pass with dummy data
x = torch.randn(4, 3, 32, 32)   # batch of 4, CIFAR-like
y = model(x)
print("Output shape:", y.shape)

# Parameter count
num_params = sum(p.numel() for p in model.parameters())
print("Total parameters:", num_params)


# In[6]:


from torch.utils.data import DataLoader
import torchvision
import torchvision.transforms as T

# Datasets & loaders
transform = T.Compose([
    T.RandomHorizontalFlip(),
    T.RandomCrop(32, padding=4),
    T.ToTensor(),
])

train_ds = torchvision.datasets.CIFAR10(
    root="./data", train=True, download=True, transform=transform
)
test_ds = torchvision.datasets.CIFAR10(
    root="./data", train=False, download=True, transform=T.ToTensor()
)

train_loader = DataLoader(train_ds, batch_size=128, shuffle=True, num_workers=2)
test_loader = DataLoader(test_ds, batch_size=256, shuffle=False, num_workers=2)

device = torch.device("cuda" if torch.cuda.is_available() else "cpu")
model = TinyResNet(num_classes=10).to(device)

criterion = nn.CrossEntropyLoss()
optimizer = torch.optim.SGD(model.parameters(), lr=0.1, momentum=0.9, weight_decay=5e-4)
scheduler = torch.optim.lr_scheduler.MultiStepLR(optimizer, milestones=[50, 100], gamma=0.1)


# In[7]:


def train_one_epoch(epoch):
    model.train()
    running_loss, correct, total = 0.0, 0, 0
    for i, (images, labels) in enumerate(train_loader):
        images, labels = images.to(device), labels.to(device)

        optimizer.zero_grad()
        outputs = model(images)
        loss = criterion(outputs, labels)
        loss.backward()
        optimizer.step()

        running_loss += loss.item() * images.size(0)
        _, preds = outputs.max(1)
        correct += preds.eq(labels).sum().item()
        total += labels.size(0)

    epoch_loss = running_loss / total
    epoch_acc = correct / total
    print(f"Epoch {epoch}: train loss={epoch_loss:.4f}, acc={epoch_acc:.4f}")


def evaluate():
    model.eval()
    correct, total = 0, 0
    with torch.no_grad():
        for images, labels in test_loader:
            images, labels = images.to(device), labels.to(device)
            outputs = model(images)
            _, preds = outputs.max(1)
            correct += preds.eq(labels).sum().item()
            total += labels.size(0)
    acc = correct / total
    print(f"Test acc={acc:.4f}")
    return acc


# In[8]:


num_epochs = 5  # bump this up if you have time

for epoch in range(1, num_epochs + 1):
    train_one_epoch(epoch)
    evaluate()
    scheduler.step()

# Save weights for later export to HLS
torch.save(model.state_dict(), "tiny_resnet_no_bn_cifar10.pth")

